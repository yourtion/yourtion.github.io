{
  "version": 2,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "status": 404, "dest": "/index.html" }
  ],
  "rewrites": [
    { "src": "/about","dest": "/about.html"},
    { "src": "/tags","dest": "/tags.html"},
    { "src": "/categories","dest": "/categories.html"},
    { "src": "/archives","dest": "/archives.html"}
  ]
}
